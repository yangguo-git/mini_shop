}

.sure-btn {
    width: 82.8% !important;
    background: #f4f4f4;
    color: #fff;
    border-radius: 2px;
    padding: 0;
    background: linear-gradient(225deg, #25cfa1, #27d98c);
    border-radius: 50rpx;
    height: 75rpx;
    line-height: 75rpx;
    font-size: 30rpx;
}

.activeClass {
    border: 1px solid #08c160 !important;
    color: white !important;
    background-color: #08c160 !important;
}

.personal-box {
    padding: 10rpx 0px;
    padding-right: 15rpx;
}

.company-invoice {
    padding-right: 15rpx;
    padding-bottom: 10rpx;
}
.invoiceWechat{
    padding-right: 10rpx;
}
.invoiceWechat text{
    color: #07c160;
    border: 1px solid #07c160;
    padding: 5rpx 10rpx;
    border-radius: 10rpx;
}
.groupBox{
